</head>
<body>
   
    <header>
        <h1>üéÇ CAKE SHOP üç∞</h1>
        <nav>
            <ul>
                <li><a href="/menu_employee">menu</a></li>
                <li><a href="/Order_details">Order detail</a></li>
                <li><a href="/Add_menu">Add menu</a></li>
                <li><a href="/manage_customer">Manage Customer</a></li>
                <li><a href="/manage_employee">Manage Employee</a></li>
                <li><a href="/logout">Log out</a></li>
            </ul>
        </nav>
    </header>
    <br>
        <div class="card-header">
            <center><h3>Our Menu</h3></center>
        </div>
    <br>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <% for (let i = 0; i < cakes.length; i++) { %>
                        <div class="col-lg-4 mb-4">
                            <div class="card">
                                <img src="/uploaded_img/cake/<%= cakes[i].img %>" alt="">
                                <div class="card-body">
                                    <form action="/menu_employee" method="post">
                                        <h5 class="card-title" name="cake_name"><%= cakes[i].cake_name %></h5> 
                                        <p class="card-text" name="cake_price">Price: <%= cakes[i].cake_price %></p> 
                                        <p class="card-text" name="cake_status" style="margin-top: -20px;">Status: <%= cakes[i].cake_status %></p>
                                        <p class="card-text" name="cake_status" style="margin-top: -20px;">Quantity: <%= cakes[i].cake_quantity %></p>
                                        <p class="card-text" name="cake_status" style="margin-top: -20px;">Size: <%= cakes[i].cake_size %></p>
                                        <input type="hidden" name="cake_id" value="<%= cakes[i].cake_id %>"> 
                                        <div class="d-flex justify-content-center mt-2">
                                            <a href="/edit_menu/<%= cakes[i].cake_id %>" class="custom-link">
                                                <button type="submit" class="custom-button">Edit üìù</button>
                                            
                                              <!--<input type="submit" value="Login" class="btn"/>-->
                                              <!-- <button type="submit" class="custom-button">Log in</button> -->
                                          </a>
                                          <a href="/delete/<%= cakes[i].cake_id %>" class="custom-link">
                                            <button type="submit" class="custom-button">Delete üóëÔ∏è</button>
                                        
                                          <!--<input type="submit" value="Login" class="btn"/>-->
                                          <!-- <button type="submit" class="custom-button">Log in</button> -->
                                      </a>
                                            
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>                    
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
