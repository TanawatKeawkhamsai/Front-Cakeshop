<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu_customer</title>
    <link rel="stylesheet" href="css/menu_customer.css">
</head>
<body>
   
    <header>
        <h1>üéÇ CAKE SHOP üç∞</h1>
        <nav>
            <ul>
                <li><a href="/menu_customer">Menu</a></li>
                <li><a href="/about">About Shop</a></li>
                <li><a href="/logout">Log out</a></li>
            </ul>
        </nav>
    </header>
    <br>
        <div class="card-header">
            <center><h3>Our Menu</h3></center>
        </div>
    <br>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row" >
    
                    <% 
                    const sortedCakes = cakes.sort((a, b) => (a.cake_quantity === 0) - (b.cake_quantity === 0));
                    for (let i = 0; i < sortedCakes.length; i++) { 
                    %>
                        <div class="col-lg-4">
                            <div class="card position-relative" ">
                                <img src="/uploaded_img/cake/<%= sortedCakes[i].img %>" alt="">
    
                                <% if (sortedCakes[i].cake_quantity == 0) { %>
                                    <div class="out-of-stock">
                                        <h4>‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏´‡∏°‡∏î</h4>
                                    </div>
                                <% } %>
    
                                <div class="card-body">
                                    <form action="/menu_customer" method="post">
                                        <h5 class="card-title"><%= sortedCakes[i].cake_name %></h5>
                                        <p class="card-text">Price: <%= sortedCakes[i].cake_price %></p>
                                        <p class="card-text" style="margin-top: -20px;">Status: <%= sortedCakes[i].cake_status %></p>
                                        <p class="card-text" style="margin-top: -20px;">Quantity: <%= sortedCakes[i].cake_quantity %></p>
                                        <p class="card-text" style="margin-top: -20px;">Size: <%= sortedCakes[i].cake_size %></p>
                                        
                                        <input type="number" name="qty" class="qty form-control" min="1" 
                                                max="<%= sortedCakes[i].cake_quantity %>" value="1" 
                                                <%= sortedCakes[i].cake_quantity == 0 ? 'disabled' : '' %>>
                                        <br>
    
                                        <input type="hidden" name="cake_name" value="<%= sortedCakes[i].cake_name %>">
                                        <input type="hidden" name="cake_price" value="<%= sortedCakes[i].cake_price %>">
    
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn-add-to-cart" 
                                                    <%= sortedCakes[i].cake_quantity == 0 ? 'disabled' : '' %>> Add to cart üõí
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>  
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
