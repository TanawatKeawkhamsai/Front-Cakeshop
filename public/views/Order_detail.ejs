            </ul>
        </nav>
    </header>

    <br>
    <div class="card-header">
        <center><h3>Order Details</h3></center>
    </div>
    <br>
    <div class="container">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12 mb-4">
                <div class="card">
                  <div class="card-body">
                    <div class="tableFixHead">
                      <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                          <tr>
                            <% if (order.length <= 1) { %>
                            <th>order ID</th>
                            <th>Customer ID</th>
                            <% } %>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Cake Name</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>Add a bill</th>
                            <th>Delete</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for (let i = 0; i < order.length; i++) { %>
                            <tr>
                              <% if (order.length <= 1) { %>
                              <td><%= order[i].order_detail_id %></td>
                              <td><%= order[i].customer_id %></td>
                              <% } %>
                              <td><%= order[i].Customer.Address %></td>
                              <td><%= order[i].Cake.cake_status %></td>
                              <td><%= order[i].Cake.cake_name %></td>
                              <td><%= order[i].Quantity %></td>
                              <td><%= order[i].total_price %></td>
                              <td><a href="/add_bill/<%= order[i].order_detail_id %>" class="aa">Add a bill</a></td>
                              <td><a href="/delete_bill/<%= order[i].order_detail_id %>" class="aa">Delete</a></td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>
              </div>                  
            </div>
          </div>
        </div>
      </div>
      <br>

    <br>
    <div class="card-header">
        <center><h3>Report Details</h3></center>
    </div>
    <br>
    <div class="container">
        <div class="card">
        <div class="card-body">
            <div class="row">
            <div class="col-lg-12 mb-4">
                <div class="card">
                <div class="card-body">
                    <div class="tableFixHead">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                        <tr>
                            <th>order ID</th>
                            <th>Customer ID</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Cake Name</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>of employee</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (let i = 0; i < report.length; i++) { %>
                            <tr>
                            <td><%= report[i].order_detail_id %></td>
                            <td><%= report[i].customer_id %></td>
                            <td><%= report[i].Customer.Address %></td>
                            <td><%= report[i].Cake.cake_status %></td>
                            <td><%= report[i].Cake.cake_name %></td>
                            <td><%= report[i].Quantity %></td>
                            <td><%= report[i].total_price %></td>
                            <td><%= report[i].Employee.employee_username %></td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                    </div>
                </div>

                </div>
            </div>                  
            </div>
        </div>
        </div>
    </div>
    <br>
</body>
</html>

